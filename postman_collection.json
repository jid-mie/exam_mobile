{
  "info": {
    "name": "Clinic API 2351060445",
    "description": "Postman collection for Exam 04 (Node.js API).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login Patient",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{patientEmail}}\",\n  \"password\": \"{{patientPassword}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "if (json?.data?.token) pm.environment.set('token', json.data.token);",
                  "if (json?.data?.user?.id) pm.environment.set('patientId', json.data.user.id);",
                  "if (json?.data?.role) pm.environment.set('role', json.data.role);"
                ]
              }
            }
          ]
        },
        {
          "name": "Login Doctor",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{doctorEmail}}\",\n  \"password\": \"{{doctorPassword}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "if (json?.data?.token) pm.environment.set('token', json.data.token);",
                  "if (json?.data?.user?.id) pm.environment.set('doctorId', json.data.user.id);",
                  "if (json?.data?.role) pm.environment.set('role', json.data.role);"
                ]
              }
            }
          ]
        },
        {
          "name": "Login Admin",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{adminEmail}}\",\n  \"password\": \"{{adminPassword}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "if (json?.data?.token) pm.environment.set('token', json.data.token);",
                  "if (json?.data?.role) pm.environment.set('role', json.data.role);"
                ]
              }
            }
          ]
        },
        {
          "name": "Me",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Doctors",
      "item": [
        {
          "name": "List Doctors",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/doctors",
              "host": ["{{baseUrl}}"],
              "path": ["api", "doctors"]
            }
          }
        },
        {
          "name": "Doctor Detail",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/doctors/{{doctorId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "doctors", "{{doctorId}}"]
            }
          }
        },
        {
          "name": "Doctor Schedules",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/doctors/{{doctorId}}/schedules",
              "host": ["{{baseUrl}}"],
              "path": ["api", "doctors", "{{doctorId}}", "schedules"]
            }
          }
        }
      ]
    },
    {
      "name": "Patients",
      "item": [
        {
          "name": "List Patients (admin)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/patients",
              "host": ["{{baseUrl}}"],
              "path": ["api", "patients"]
            }
          }
        },
        {
          "name": "Patient Detail",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/patients/{{patientId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "patients", "{{patientId}}"]
            }
          }
        },
        {
          "name": "Patient Appointments",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/patients/{{patientId}}/appointments?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "patients", "{{patientId}}", "appointments"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Appointments",
      "item": [
        {
          "name": "Create Appointment (patient)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"doctor_id\": {{doctorId}},\n  \"appointment_date\": \"{{appointmentDate}}\",\n  \"appointment_time\": \"10:00\",\n  \"reason\": \"Checkup\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/appointments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "appointments"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "if (json?.data?.id) pm.environment.set('appointmentId', json.data.id);"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Appointment",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/appointments/{{appointmentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "appointments", "{{appointmentId}}"]
            }
          }
        },
        {
          "name": "Confirm Appointment (doctor/admin)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/appointments/{{appointmentId}}/confirm",
              "host": ["{{baseUrl}}"],
              "path": ["api", "appointments", "{{appointmentId}}", "confirm"]
            }
          }
        },
        {
          "name": "Complete Appointment (doctor/admin)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"diagnosis\": \"Stable\",\n  \"prescription\": \"Vitamin D\",\n  \"notes\": \"Follow up in 3 months\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/appointments/{{appointmentId}}/complete",
              "host": ["{{baseUrl}}"],
              "path": ["api", "appointments", "{{appointmentId}}", "complete"]
            }
          }
        },
        {
          "name": "Cancel Appointment",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/appointments/{{appointmentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "appointments", "{{appointmentId}}"]
            }
          }
        },
        {
          "name": "Appointments By Date (admin)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/appointments?date={{appointmentDate}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "appointments"],
              "query": [
                { "key": "date", "value": "{{appointmentDate}}" }
              ]
            }
          }
        }
      ]
    }
  ]
}
